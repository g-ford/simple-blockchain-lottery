{
  "name": "simplelottery-api",
  "version": "0.1.0",
  "description": "GraphQL API for SimpleLottery",
  "main": "./dist/src/index.js",
  "typings": "./dist/src/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean": "rimraf dist client",
    "build": "npm run clean && tsc",
    "prepare": "npm run build",
    "xtest": "npm run build && mocha -r ts-node/register \"./**/*.spec.ts\" --reporter spec",
    "start": "npm run build && node ./dist/src/index",
    "start:dev": "npm run clean && ts-node-dev ./src/index.ts"
  },
  "dependencies": {
    "@worldsibu/convector-adapter-fabric": "^1.3.5",
    "apollo-server": "^2.8.1",
    "dotenv": "^8.0.0",
    "graphql": "^14.4.2",
    "reflect-metadata": "^0.1.13",
    "simplelottery-cc": "^0.1.0",
    "type-graphql": "^0.17.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.5",
    "@types/winston": "^2.4.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.0.3",
    "rimraf": "^2.6.2",
    "ts-node": "^8.0.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.3"
  }
}
