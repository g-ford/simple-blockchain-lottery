{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext", "dom", "esnext.asynciterable", "es2016"],
    "sourceMap": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowJs": true,
    "skipLibCheck": true,

    "strict": true,
    "strictPropertyInitialization": false
  },
  "include": ["src"]
}
